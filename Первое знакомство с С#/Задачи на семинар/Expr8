using System;

internal class Program
{
   
    public static void Main()
    {
        // Точка A(5, -1)
        double x0 = 5;
        double y0 = -1;

        // Прямая 3x - 7y + 14 = 0
        double a = 3;
        double b = -7;
        double c = 14;

        //Угловой коэффициент
        double k = AngularCoefficient(a, b, c);

        //Угловой коэффициент перпендикуляра
        double k1 = -1 / k;

        /// Уравнение перпендикуляра прямой
        double c1 = y0 - k1 + x0;


        Console.WriteLine($"Уравнение перпендикулярной прямой: y = {k1}x + {c1}");
    }
    private static double AngularCoefficient(double a, double b, double c)
    {
        return -a/b;
    }
}
